<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Recruiter Dashboard</title>
</head>
<body>
    <h1>Welcome to the Recruiter Dashboard</h1>
    <h2>Your Campaigns:</h2>
    <ul>
        <% campaigns.forEach(function(campaign) { %>
            <li>
                <strong>Company:</strong> <%= campaign.company %><br>
                <strong>Role Offered:</strong> <%= campaign.role_offered %><br>
                <strong>Location:</strong> <%= campaign.location %><br>
                <strong>Stipend:</strong> <%= campaign.min_stiphend %> - <%= campaign.max_stiphend %><br>
                <strong>Last Date:</strong> <%= campaign.last_date %><br>
            </li>
        <% }) %>
    </ul>
</body>
</html>
